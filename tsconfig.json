{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["ES6", "ES2021"],
    "module": "commonjs",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "resolveJsonModule": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
}